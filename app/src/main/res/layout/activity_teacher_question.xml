<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="335dp"
        android:layout_height="726dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="656dp">


            <Button
                android:id="@+id/annuler"
                android:layout_width="134dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/ubuntu"
                android:text="@string/Annuler"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editEmail6" />

            <Button
                android:id="@+id/next"
                android:layout_width="134dp"
                android:layout_height="48dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/ubuntu"
                android:text="@string/suivant"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editEmail6" />

            <EditText
                android:id="@+id/edit_Title"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Titre"
                android:inputType="text"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.564"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.203" />

            <EditText
                android:id="@+id/edit_matiere"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Matiere"
                android:inputType="text"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.113" />

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Identifiant"
                android:inputType="text"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.317" />

            <EditText
                android:id="@+id/edit_heure"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Heure"
                android:inputType="time"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.532" />

            <EditText
                android:id="@+id/editduree"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="DurÃ©e en minute"
                android:inputType="number"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.65" />

            <EditText
                android:id="@+id/editEmail6"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.761" />

            <EditText
                android:id="@+id/Date"
                android:layout_width="303dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Date"
                android:inputType="date"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_heure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>